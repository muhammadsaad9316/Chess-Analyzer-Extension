{
  "manifest_version": 3,
  "name": "Chess Analyzer",
  "version": "1.0.0",
  "description": "Analyze chess positions and display best moves with arrows",
  "key": "",
  "permissions": [
    "activeTab",
    "storage",
    "nativeMessaging"
  ],
  "host_permissions": [
    "https://www.chess.com/*",
    "https://lichess.org/*",
    "http://localhost:5000/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.chess.com/*",
        "https://lichess.org/*"
      ],
      "js": [
        "content/state.js",
        "content/boardDetector.js",
        "content/arrowRenderer.js",
        "content/fenBuilder.js",
        "content/analyzer.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://www.chess.com/*",
        "https://lichess.org/*"
      ],
      "js": [
        "injected.js"
      ],
      "world": "MAIN",
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}